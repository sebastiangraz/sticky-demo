---
title: Canon
---
<div class="row">
  <h1 class="mt4 mb4 tungsten ttu f2 f1-ns">Compact Digital Cameras</h1>

  <div class="main-content flex-ns flex-row justify-between">
      <div class="sidebar nevada w-100 w-40-m w-20-l">
        <div class="sidebar__inner cf">
          <div class="mb3 pa3 bt b--black-10">Filter by:</div>
          <div class="dn db-ns">
            <%= partial "partials/sidebar" %>
          </div>
        </div>
      </div>
      <div class="content pl4-ns w-100 w-60-m w-80-l">
          <div data-role="SORTING" class="mb4 flex flex-column-m flex-row-ns justify-between bt b--black-10 pt4 items-center">
            <div class="dn dn-m db-l mb3-m">
              <div class="flex" data-role="FLUSHBORDER GROUPPILL">
                <span class="ph2 pv1 flex items-center"><i class="f7 mr2 nevada fas fa-th"></i> <span class="f7 tracked ttu">Grid</span></span>
                <span class="ph2 pv1 flex items-center"><i class="f7 mr2 nevada fas fa-th-list"></i> <span class="f7 tracked ttu">List</span></span>
              </div>
            </div>
            <div class="flex mb3-m" data-role="FLUSHBORDER GROUPPILL">
              <span class="v-mid ph2 pv1 black-20">‹</span>
              <span class="v-mid ph2 pv1 black-20">1</span>
              <span class="v-mid ph2 pv1">2</span>
              <span class="v-mid ph2 pv1 red">›</span>
            </div>
            <div>
              <span class="f7 tracked ttu">Sort By </span>
              <select class="f7 input-reset ba b--black-10 bg-white ph2 pv1">
                <option>Price Low to High</option>
                <option>New In</option>
                <option>Display Name A-Z</option>
                <option>Display Name Z-A</option>
                <option>Price High to Low</option>
              </select>
            </div>
          </div>
          <div data-role="PRODUCTLISTING">
            <% (1..20).each do |i| %>
              <%= partial "partials/tile" %>
            <% end %>
          </div>
      </div>
  </div>
</div>
<div class="dib w-100 h5 bg-black-20 mt6" data-role="FOOTER">
  <div class="pa5 row">
    Footer
  </div>
</div>

<script type="text/javascript">
  var sidebar = new StickySidebar('.sidebar', {
    topSpacing: 32,
    resizeSensor: true,
    minWidth: 480,
    bottomSpacing: 32,
    containerSelector: '.main-content',
    innerWrapperSelector: '.sidebar__inner'
  });
</script>
