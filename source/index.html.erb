---
title: Canon
---
<div class="row">
    <div data-role="MOBILESIDEBAR" class="z-2 w-100 closed fixed top-0 left-0 vh-100">
      <div class="bg-curious-blue hover-bg-malibu pointer" data-role="CLOSESIDEBAR">
      </div>
      <div data-role="SIDEBAR" class="z-2 w-90 absolute bg-white pv3 pr4 pl3 overflow-scroll touch-scroll vh-100">
        <%= partial "partials/sidebar" %>
      </div>
      <div data-role="OVERLAY" class="closed w-100 vh-100 fixed top-0 left-0 z-1 bg-black-70">
      </div>
    </div>

  <h1 class="mv3 tungsten ttu f2 f1-ns antialiased">Compact Digital Cameras</h1>

  <div class="main-content flex-ns flex-row justify-between">
      <div class="sidebar nevada w-100 w-40-m w-20-l">
        <div class="sidebar__inner cf">
          <div class="db dn-ns mv3 flex justify-center absolute relative-ns w-100">
            <a data-role="OPENFILTER" onclick="return false;" href="#" class="w-100 tc dib ph3 pv2 ba bg-white b--curious-blue curious-blue br-pill f6">
              <i class="curious-blue mr2 fas fa-filter"></i> Filter products
              <span class="pv1 ph2 ml2 bg-curious-blue white br-pill" data-role="COUNTER"></span>
            </a>
          </div>
          <div class="dn db-ns pv3 bt b--black-10">Filter products</div>

          <div class="flex">
            <a data-role="TOGGLEFILTERS" class="br2 mb4 f7 dn dib-ns mb3 nevada hover-black pointer">
              <i class="mr1 fas fa-eye-slash"></i>
              <span>Hide all filters</span>
            </a>
          </div>

          <div class="dn db-ns" data-role="DESKTOPSIDEBAR">
            <%= partial "partials/sidebar" %>
          </div>
        </div>
      </div>
      <div class="content pl4-ns w-100 w-60-m w-80-l">
          <div data-role="SORTING" class="mb4 flex flex-column-m flex-row-ns justify-between bt b--black-10 pt5 pt4-ns items-center">
            <div class="dn dn-m db-l mb3-m">
              <div class="flex" data-role="FLUSHBORDER GROUPPILL">
                <span class="ph2 pv1 flex items-center"><i class="f7 mr2 nevada fas fa-th"></i> <span class="f7 tracked ttu">Grid</span></span>
                <span class="ph2 pv1 flex items-center"><i class="f7 mr2 nevada fas fa-th-list"></i> <span class="f7 tracked ttu">List</span></span>
              </div>
            </div>
            <div class="flex mb3-m" data-role="FLUSHBORDER GROUPPILL">
              <span class="v-mid ph2 pv1 black-20">‹</span>
              <span class="v-mid ph2 pv1 black-20">1</span>
              <span class="v-mid ph2 pv1">2</span>
              <span class="v-mid ph2 pv1 red">›</span>
            </div>
            <div>
              <span class="f7 tracked ttu">Sort By </span>
              <select class="f7 input-reset ba b--black-10 bg-white ph2 pv1">
                <option>Price Low to High</option>
                <option>New In</option>
                <option>Display Name A-Z</option>
                <option>Display Name Z-A</option>
                <option>Price High to Low</option>
              </select>
            </div>
          </div>
          <div data-role="PRODUCTLISTING">
            <% (1..20).each do |i| %>
              <%= partial "partials/tile" %>
            <% end %>
          </div>
      </div>
  </div>
</div>
<div class="dib w-100 h5 bg-black-20 mt6" data-role="FOOTER">
  <div class="pa5 row">
    Footer
  </div>
</div>

<script type="text/javascript">
  var sidebar = new StickySidebar('.sidebar', {
    topSpacing: 0,
    resizeSensor: true,
    // minWidth: 480,
    stickyClass: 'is-affixed',
    bottomSpacing: 0,
    containerSelector: '.main-content',
    innerWrapperSelector: '.sidebar__inner'
  });
</script>
